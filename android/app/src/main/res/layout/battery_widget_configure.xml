<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <!-- 使用说明部分 -->
                <TextView
                    android:id="@+id/guide_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/guide_background"
                    android:padding="16dp"
                    android:text="@string/guide_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <!-- GitHub 仓库链接 -->
                <LinearLayout
                    android:id="@+id/github_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_github" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/github_link"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="?attr/colorPrimary" />
                </LinearLayout>

                <!-- 配置部分 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/battery_no_hint"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/battery_no_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/battery_no_hint"
                    android:importantForAutofill="no"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/city_code_hint"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/city_code_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/city_code_hint"
                    android:importantForAutofill="no"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/token_hint"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/token_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/token_hint"
                    android:importantForAutofill="no"
                    android:inputType="text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/base_url_hint"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <EditText
                    android:id="@+id/base_url_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/base_url_hint"
                    android:importantForAutofill="no"
                    android:inputType="textUri" />

                <!-- 刷新间隔配置 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/refresh_interval_label"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <Spinner
                    android:id="@+id/refresh_interval_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:minHeight="48dp" />

                <!-- 通知设置 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="电量更新通知"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/notification_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp" />

                </LinearLayout>

                <!-- 功能按钮区域 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <!-- 测试按钮 -->
                    <com.xiaoha.batterywidget.views.TagView
                        android:id="@+id/test_button"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_margin="2dp"
                        app:tagText="测试接口连接"
                        app:tagType="info" />

                    <!-- 检查更新按钮 -->
                    <com.xiaoha.batterywidget.views.TagView
                        android:id="@+id/check_update_button"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_margin="2dp"
                        app:tagText="检查更新"
                        app:tagType="info" />
                </LinearLayout>

                <!-- 保存按钮 -->
                <Button
                    android:id="@+id/add_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/button_primary"
                    android:text="@string/add_widget"
                    android:textColor="@color/button_text_primary"
                    android:textSize="14sp" />

                <!-- 测试结果显示区域 -->
                <LinearLayout
                    android:id="@+id/test_result_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <!-- 日志控制按钮 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="测试日志"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

                        <com.xiaoha.batterywidget.views.TagView
                            android:id="@+id/copy_log_button"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_margin="2dp"
                            app:tagText="复制"
                            app:tagType="success" />

                        <com.xiaoha.batterywidget.views.TagView
                            android:id="@+id/clear_log_button"
                            android:layout_width="wrap_content"
                            android:layout_height="26dp"
                            android:layout_margin="2dp"
                            app:tagText="清空"
                            app:tagType="danger" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/test_result_text"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/log_window_background"
                        android:fadeScrollbars="false"
                        android:fontFamily="monospace"
                        android:gravity="top"
                        android:lineSpacingExtra="4dp"
                        android:padding="8dp"
                        android:scrollbars="vertical"
                        android:text=""
                        android:textColor="@color/log_text"
                        android:textIsSelectable="true"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 版本信息 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="@string/version"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="?android:textColorSecondary" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>